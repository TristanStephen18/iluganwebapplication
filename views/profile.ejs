<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Company User Profile</title>
    <link rel="icon" href="/newlogo" type="image/x-icon">
    <style>
      /* Base Styles */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
        color: #333;
      }

      /* Profile Container */
      .profile-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      /* Profile Header */
      .profile-header {
        text-align: center;
        margin-bottom: 20px;
      }

      .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 2px solid #4caf50;
      }

      /* Profile Details */
      .profile-details {
        text-align: center;
      }

      .profile-details h1 {
        margin-bottom: 10px;
        color: #4caf50;
      }

      .profile-details p {
        margin: 5px 0;
      }

      /* Button Styling */
      button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
      }

      button:hover {
        background-color: #45a049;
      }
    </style>
    <!-- <link rel="stylesheet" href="styles.css"> -->
  </head>
  <body>
    <div class="profile-container">
      <div class="profile-header">
        <img
          src="/logo"
          alt="Company Logo"
          class="profile-pic"
          id="profilePic"
        />
      </div>
      <div class="profile-details">
        <h1 id="companyName">Company Name</h1>
        <p>
          <strong>Email:</strong> <span id="email">company@example.com</span>
        </p>
        <p>
          <strong>Date Joined:</strong> <span id="dateJoined">2024-01-15</span>
        </p>
        <p>
          <strong>Subscription Type:</strong>
          <span id="subscriptionType">Premium</span>
        </p>
        <p>
          <strong>Subscription Expiry:</strong>
          <span id="subscriptionExpiry">2025-01-15</span>
        </p>
      </div>
      <button id="editButton">Edit Profile</button>
    </div>
    <script>
      // JavaScript to handle dynamic updates
      document.getElementById("editButton").addEventListener("click", () => {
        const companyName = prompt("Enter company name:", "Company Name");
        const email = prompt("Enter company email:", "company@example.com");
        const dateJoined = prompt(
          "Enter date joined (YYYY-MM-DD):",
          "2024-01-15"
        );
        const subscriptionType = prompt("Enter subscription type:", "Premium");
        const subscriptionExpiry = prompt(
          "Enter subscription expiry (YYYY-MM-DD):",
          "2025-01-15"
        );

        if (companyName)
          document.getElementById("companyName").textContent = companyName;
        if (email) document.getElementById("email").textContent = email;
        if (dateJoined)
          document.getElementById("dateJoined").textContent = dateJoined;
        if (subscriptionType)
          document.getElementById("subscriptionType").textContent =
            subscriptionType;
        if (subscriptionExpiry)
          document.getElementById("subscriptionExpiry").textContent =
            subscriptionExpiry;
      });
    </script>
  </body>
</html>
