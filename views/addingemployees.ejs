<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>iLugan Mobile</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="icon" href="../images/newlogo.png" type="image/x-icon">
  <link rel="stylesheet" href="../css/addingemp.css">
</head>
<body>
  <div class="d-flex">
    <div class="sidebar p-3">
      <div class="logo">
        <img src="../images/newlogo.png" alt="Logo" class="mb-2" />
        <span>iLugan</span>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item mb-3">
          <a href="/dashboard" class="nav-link"
            ><i class="fas fa-tachometer-alt"></i>Dashboard</a
          >
        </li>
        <li class="nav-item mb-3">
          <a href="/terminals" class="nav-link"
            ><i class="fas fa-map"></i>Terminal Management</a
          >
        </li>
        <li class="nav-item mb-3">
          <a href="/tracker" class="nav-link"
            ><i class="fas fa-map-marker-alt"></i>Bus Location Tracker</a
          >
        </li>
        <li class="nav-item mb-3">
          <a href="/reservations" class="nav-link"
            ><i class="fas fa-ticket-alt"></i>Reservation Control</a
          >
        </li>
        <li class="nav-item mb-3">
          <a href="/busadding" class="nav-link"
            ><i class="fas fa-bus"></i>Buses</a
          >
        </li>
        <!-- <li class="nav-item mb-3">
          <a href="/notifications" class="nav-link"
            ><i class="fas fa-bell"></i>Notifications</a
          >
        </li> -->
        <li class="nav-item mb-3">
          <a href="/busalerts" class="nav-link"
            ><i class="fas fa-exclamation-triangle"></i>Bus Alerts</a
          >
        </li>
        <!-- <li class="nav-item mb-3">
          <a href="/systemlogs" class="nav-link"
            ><i class="fas fa-clipboard"></i>Logs</a
          >
        </li> -->
        <li class="nav-item mb-3">
          <a href="/iluganmobile" class="nav-link"
            ><i class="fas fa-mobile-alt"></i> iLugan Mobile</a
          >
        </li>
        <li class="nav-item mb-3">
          <a href="/analytics" class="nav-link"
            ><i class="fas fa-chart-line"></i>Analytics and Reports</a
          >
        </li>
        <li class="nav-item mb-3" id="logout">
          <a class="nav-link"><i class="fas fa-sign-out-alt"></i>Log Out</a>
        </li>
      </ul>
    </div>
    <div class="container">
      <div class="form-section">
          <h2>Add iLugan Users</h2>
          <form id="add-employees-form">
              <label for="employee-id">Employee Id</label>
              <input type="text" id="emp-id" placeholder="Enter employee ID" required>

              <label for="email">Email</label>
              <input type="email" id="email" placeholder="Enter email" required>
              
              <label for="password">Password</label>
              <input type="password" id="password" placeholder="Enter password" required>
              
              <label for="role">Choose role</label>
              <select id="employee_type">
                <option value="conductor">Conductor</option>
                <option value="inspector">Inspector</option>
              </select>
              
              <label for="name">Name</label>
              <input type="text" id="name" placeholder="Enter name" required>
              
              <button type="submit">Add Employee</button>
          </form>
          <button id="see_employees">See Employees</button>
      </div>

      <div class="promo-section">
          <img src="../images/mobile.png" alt="ilugan mobile">
      </div>
  </div>
  <!-- Password Re-entry Modal -->
  <div class="modal fade" id="passwordModal" tabindex="-1" aria-labelledby="passwordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="passwordModalLabel">Re-enter Password</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <label for="reenter-password" class="form-label">Please enter your password to continue:</label>
          <input type="password" id="reenter-password" class="form-control" placeholder="Enter password" required>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" id="submit-password">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src="../scripts/monitoring.js"></script>
  <script type="module" src="../scripts/addingemployees.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
