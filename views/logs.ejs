  <script>
    function filterLogs() {
      const inputDate = document.getElementById('filterDate').value;
      const logs = document.querySelectorAll('.log-entry');
      logs.forEach(log => {
        const logDate = log.querySelector('small').textContent;
        log.style.display = logDate === inputDate ? '' : 'none';
      });
    }
  </script>

